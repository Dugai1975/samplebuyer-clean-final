    name: string;
    description: string;
    total_available: number;
    count_complete: number;
    count_accept: number;
    count_reject: number;
    count_terminate: number;
    count_over_quota: number;
    cpi_buyer: number;
    state: string;
    buyer: {
      name: string;
      complete_link: string;
      terminate_link: string;
      quota_link: string;
      duplicate_link: string;
      quality_link: string;
